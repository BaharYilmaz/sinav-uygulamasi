@model QuizApp.ViewModel.viewModel

@{
    ViewBag.Title = "QuizOlustur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto " id="soruHazirla">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="text-center"><b>SORU HAZIRLA</b></h5>
                <br /><br />

                @using (Html.BeginForm("SoruKaydet", "QuizHazirla", FormMethod.Post))
                {
                    <div class="form-label-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><b>Kategori Seçiniz:</b></label>
                            </div>
                            <div class="col-md-6">
                                @Html.DropDownListFor(m => m.Soru.kategoriId, new SelectList(Model.Kategori, "kategoriId", "kategori"), "Kategori", new { @class = "form-control" })

                            </div>
                        </div>
                    </div>

                    <div class="form-label-group">
                        <label><b>Sorunuzu Yazınız:</b></label>
                        @Html.TextAreaFor(m => m.Soru.soru, new { @class = "form-control" })


                    </div>
                    <br />

                    <div>
                        <label><b>Seçenekleri Yazınız,Doğru Cevabı İşaretleyiniz:</b></label>
                        <div class="form-label-group">
                            <div class="row">
                                <input type="radio" class="radioBtn"/>
                                @Html.RadioButtonFor(m => m.Secenek.dogruCvp, 1, new { @class = "form-control col-md-1" })
                                @Html.TextBoxFor(m => m.Secenek.cevap1, new { @class = "form-control col-md-11" })
                            </div>
                        </div>

                        <br />


                        <div class="form-label-group">

                            <div class="row">
                                <input type="radio" class="radioBtn" />
                                @Html.RadioButtonFor(m => m.Secenek.dogruCvp, 1, new { @class = "form-control col-md-1" })
                                @Html.TextBoxFor(m => m.Secenek.cevap2, new { @class = "form-control col-md-11" })
                            </div>
                        </div>

                        <br />
                        <div class="form-label-group">
                            <div class="row">
                                <input type="radio" class="radioBtn" />
                                @Html.RadioButtonFor(m => m.Secenek.dogruCvp, 1, new { @class = "form-control col-md-1" })
                                @Html.TextBoxFor(m => m.Secenek.cevap3, new { @class = "form-control col-md-11" })
                            </div>
                        </div>

                        <br />

                        <div class="form-label-group">
                            <div class="row">
                                <input type="radio" class="radioBtn" />
                                @Html.RadioButtonFor(m => m.Secenek.dogruCvp, 1, new { @class = "form-control col-md-1" })
                                @Html.TextBoxFor(m => m.Secenek.cevap4, new { @class = "form-control col-md-11" })
                            </div>
                        </div>
                       
                    </div>


                    <br /><br />
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Kaydet</button>
                    <hr class="my-4">
                }

            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
